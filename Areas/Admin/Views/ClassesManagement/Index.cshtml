@model IEnumerable<OnlineClassManagement.Models.Class>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Quản lý Lớp học";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

<h1 class="mb-4">Quản lý Lớp học</h1>

<div id="ajax-status-container"></div>

<div class="row mb-3">
    <div class="col-md-12">
        <div class="d-flex align-items-center gap-2 flex-wrap">
            <select id="is-active-filter" class="form-select" style="width: auto;">
                <option value="">Tất cả</option>
                <option value="true" selected="@(ViewBag.IsActiveFilter == true)">Hoạt động</option>
                <option value="false" selected="@(ViewBag.IsActiveFilter == false)">Vô hiệu hóa</option>
            </select>
            <input type="text" id="search-term" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.SearchTerm" style="width: 300px;">
            <button type="button" id="search-btn" class="btn btn-outline-secondary btn-action">Tìm kiếm</button>
            <button type="button" id="clear-filter-btn" class="btn btn-outline-secondary btn-action">Xóa bộ lọc</button>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover" style="width: 100%;">
        <thead>
            <tr>
                <th style="width: 5%;">ID</th>
                <th style="width: 15%;">Tên lớp</th>
                <th style="width: 10%;">Mã lớp</th>
                <th style="width: 15%;">Giảng viên</th>
                <th style="width: 10%;">Học kỳ</th>
                <th style="width: 10%;">Năm học</th>
                <th style="width: 10%;">Trạng thái</th>
                <th style="width: 10%;">Ngày tạo</th>
                <th style="width: 15%; text-align: center;">Thao tác</th>
            </tr>
        </thead>
        <tbody id="classes-table-body">
            @foreach (var item in Model)
            {
                <tr id="class-row-@item.ClassId">
                    <td>@item.ClassId</td>
                    <td>@item.ClassName</td>
                    <td>@item.ClassCode</td>
                    <td>@item.Teacher.FullName</td>
                    <td>@item.Semester</td>
                    <td>@item.AcademicYear</td>
                    <td id="status-@item.ClassId">
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Vô hiệu hóa</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td id="actions-@item.ClassId" class="action-buttons">
                        <div class="d-flex flex-column gap-1">
                            <a asp-action="Details" asp-route-id="@item.ClassId" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                            @if (item.IsActive)
                            {
                                <a asp-action="Delete" asp-route-id="@item.ClassId" class="btn btn-sm btn-outline-secondary">Vô hiệu hóa</a>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary btn-activate-class" data-class-id="@item.ClassId">Kích hoạt</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusContainer = document.getElementById('ajax-status-container');
            const activateButtons = document.querySelectorAll('.btn-activate-class');
            const activateUrl = '@Url.Action("Activate", "ClassesManagement", new { area = "Admin" })';
            const indexUrl = '@Url.Action("Index", "ClassesManagement", new { area = "Admin" })';
            const isActiveFilter = document.getElementById('is-active-filter');
            const searchTerm = document.getElementById('search-term');
            const searchBtn = document.getElementById('search-btn');
            const clearFilterBtn = document.getElementById('clear-filter-btn');
            const tableBody = document.getElementById('classes-table-body');
            
            // Loading state
            let isLoading = false;
            
            // Function to load classes via AJAX
            function loadClasses(isActiveFilterValue, searchTermValue) {
                if (isLoading) return;
                
                isLoading = true;
                tableBody.innerHTML = '<tr><td colspan="9" class="text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Đang tải...</span></div></td></tr>';
                
                const params = new URLSearchParams();
                if (isActiveFilterValue !== null && isActiveFilterValue !== '') {
                    params.append('isActiveFilter', isActiveFilterValue);
                }
                if (searchTermValue) {
                    params.append('searchTerm', searchTermValue);
                }
                
                fetch(`${indexUrl}?${params.toString()}`, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.text())
                .then(html => {
                    tableBody.innerHTML = html;
                    // Re-attach activate handlers
                    const newActivateButtons = document.querySelectorAll('.btn-activate-class');
                    newActivateButtons.forEach(button => {
                        attachActivateHandler(button);
                    });
                    isLoading = false;
                })
                .catch(error => {
                    console.error('Error:', error);
                    tableBody.innerHTML = '<tr><td colspan="9" class="text-center text-danger">Lỗi khi tải dữ liệu. Vui lòng thử lại.</td></tr>';
                    isLoading = false;
                });
            }
            
            // Search button click
            searchBtn.addEventListener('click', function() {
                const isActiveValue = isActiveFilter.value;
                const searchValue = searchTerm.value;
                loadClasses(isActiveValue, searchValue);
            });
            
            // Enter key in search input
            searchTerm.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    searchBtn.click();
                }
            });
            
            // Status filter change
            isActiveFilter.addEventListener('change', function() {
                const isActiveValue = isActiveFilter.value;
                const searchValue = searchTerm.value;
                loadClasses(isActiveValue, searchValue);
            });
            
            // Clear filter button
            clearFilterBtn.addEventListener('click', function() {
                isActiveFilter.value = '';
                searchTerm.value = '';
                loadClasses('', '');
            });

            function showAlert(message, isSuccess) {
                statusContainer.innerHTML = '';
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert ${isSuccess ? 'alert-success' : 'alert-danger'} alert-dismissible fade show`;
                alertDiv.setAttribute('role', 'alert');
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                statusContainer.appendChild(alertDiv);
                setTimeout(() => {
                    alertDiv.classList.remove('show');
                    setTimeout(() => alertDiv.remove(), 150);
                }, 3000);
            }

            function attachActivateHandler(button) {
                button.addEventListener('click', function() {
                    const classId = this.getAttribute('data-class-id');
                    const button = this;
                    button.disabled = true;
                    const originalText = button.textContent;
                    button.textContent = 'Đang xử lý...';

                    fetch(`${activateUrl}/${classId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest',
                            'RequestVerificationToken': '@requestToken'
                        },
                        body: `id=${classId}`
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showAlert(data.message, true);
                            
                            const statusCell = document.getElementById(`status-${classId}`);
                            const actionsCell = document.getElementById(`actions-${classId}`);
                            
                            statusCell.innerHTML = '<span class="badge bg-success">Hoạt động</span>';
                            actionsCell.innerHTML = `
                                <div class="d-flex flex-column gap-1">
                                    <a href="@Url.Action("Details", "ClassesManagement", new { area = "Admin" })/${classId}" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                                    <a href="@Url.Action("Delete", "ClassesManagement", new { area = "Admin" })/${classId}" class="btn btn-sm btn-outline-secondary">Vô hiệu hóa</a>
                                </div>
                            `;
                        } else {
                            showAlert(data.message, false);
                            button.disabled = false;
                            button.textContent = originalText;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showAlert('Lỗi mạng. Vui lòng thử lại.', false);
                        button.disabled = false;
                        button.textContent = originalText;
                    });
                });
            }

            activateButtons.forEach(button => {
                attachActivateHandler(button);
            });
        });
    </script>
}

