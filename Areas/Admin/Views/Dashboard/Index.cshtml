@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Dashboard - Tổng quan hệ thống</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Tổng số Người dùng</h5>
                <h2 class="card-text">@ViewBag.TotalUsers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Học viên</h5>
                <h2 class="card-text">@ViewBag.TotalStudents</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Giảng viên</h5>
                <h2 class="card-text">@ViewBag.TotalTeachers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Quản trị viên</h5>
                <h2 class="card-text">@ViewBag.TotalAdmins</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Lớp học đang hoạt động</h5>
                <h2 class="card-text">@ViewBag.ActiveClasses / @ViewBag.TotalClasses</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Tổng số Bài tập</h5>
                <h2 class="card-text">@ViewBag.TotalAssignments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card info-card mb-3">
            <div class="card-body">
                <h5 class="card-title">Tổng số Bài nộp</h5>
                <h2 class="card-text">@ViewBag.TotalSubmissions</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Thống kê đăng ký mới (30 ngày gần nhất)</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.NewUsersByDay != null)
                {
                    <canvas id="userRegistrationChart" width="400" height="100"></canvas>
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu đăng ký trong 30 ngày gần nhất.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (ViewBag.NewUsersByDay != null)
        {
            <text>
            var newUsersByDay = @Html.Raw(Json.Serialize(ViewBag.NewUsersByDay));
            if (newUsersByDay && newUsersByDay.length > 0) {
                var ctx = document.getElementById('userRegistrationChart').getContext('2d');
                var chart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: newUsersByDay.map(function(item) {
                            return new Date(item.date).toLocaleDateString('vi-VN');
                        }),
                        datasets: [
                            {
                                label: 'Tổng số',
                                data: newUsersByDay.map(function(item) { return item.count; }),
                                borderColor: 'rgb(75, 192, 192)',
                                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                tension: 0.1
                            },
                            {
                                label: 'Học viên',
                                data: newUsersByDay.map(function(item) { return item.students; }),
                                borderColor: 'rgb(54, 162, 235)',
                                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                tension: 0.1
                            },
                            {
                                label: 'Giảng viên',
                                data: newUsersByDay.map(function(item) { return item.teachers; }),
                                borderColor: 'rgb(255, 99, 132)',
                                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                                tension: 0.1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }
            </text>
        }
    </script>
}
